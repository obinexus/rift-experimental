# .riftrc.3 - IR Builder Stage Governance
version: "1.0"
stage:
  id: 3
  name: "ir_builder"
  trust_level: "verified"
  
governance:
  input_validation:
    ast_node_limit: 10000
    symbol_table_max: 5000
    memory_limit: "64MB"
    
  security:
    sandbox: true
    network_access: false
    filesystem_access: "read_only"
    zero_trust_mode: enabled
    
  compilation:
    llvm_target: "wasm32-unknown-emscripten"
    optimization_level: "O3"
    debug_symbols: true
    
  detach_mode_enabled: false
  stage_isolation: strict
  attestation_required: false

---
