# .riftrc.5 - Bytecode Emitter Stage Governance
version: "1.0"
stage:
  id: 5
  name: "bytecode_emitter"
  trust_level: "verified"
  
governance:
  input_validation:
    ir_nodes_max: 20000
    bytecode_size_limit: "2MB"
    memory_limit: "96MB"
    
  security:
    sandbox: true
    network_access: false
    filesystem_access: "read_write_staged"
    zero_trust_mode: enabled
    
  compilation:
    llvm_target: "wasm32-unknown-emscripten"
    optimization_level: "O3"
    debug_symbols: true
    emit_wat: true
    
  output_validation:
    bytecode_verification: true
    wat_roundtrip_test: true
    wasm_validation: true
    
  detach_mode_enabled: false
  stage_isolation: strict
  attestation_required: true
