# .riftrc.6 - Runtime Adapter Stage Governance
version: "1.0"
stage:
  id: 6
  name: "runtime_adapter"
  trust_level: "trusted"
  
governance:
  input_validation:
    bytecode_size_max: "5MB"
    execution_timeout: "30s"
    memory_limit: "256MB"
    
  security:
    sandbox: true
    network_access: false
    filesystem_access: "read_only"
    zero_trust_mode: enabled
    wasm_runtime_isolation: true
    
  compilation:
    llvm_target: "wasm32-unknown-emscripten"
    optimization_level: "O3"
    debug_symbols: false  # Production ready
    
  runtime:
    execution_mode: "isolated"
    stack_size: "1MB"
    heap_size: "16MB"
    garbage_collection: enabled
    
  monitoring:
    performance_tracking: true
    resource_monitoring: true
    error_reporting: detailed
    
  detach_mode_enabled: false
  stage_isolation: strict
  attestation_required: true